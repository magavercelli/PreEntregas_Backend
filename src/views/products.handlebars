<div id="products-add">
    <ul>
        {{#each products}}
        <li>
            <a href="/products/{{this._id}}">{{this.title}}</a>
            <a href="./cart.handlebars"></a><button>Agregar al carrito</button>
        </li>
        {{/each}}
    </ul>
    <div>
        {{#if products.hasPrevPage}}
            <a href="/products?page={{products.prevPage}}">Anterior</a>
        {{/if}}
